{
    "version": 2,
    "routes": [
      { "src": "/(.*)", "dest": "/" }
    ],
    "functions": {
      "api/**/*": {
        "runtime": "nodejs18.x"
      }
    },
    "rewrites": [
      { "source": "/(.*)", "destination": "/$1" }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          { "key": "Cache-Control", "value": "no-store, max-age=0, must-revalidate" }
        ]
      }
    ]
  }
  